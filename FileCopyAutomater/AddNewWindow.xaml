<Window x:Class="FileCopyAutomater.AddNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCopyAutomater"
        mc:Ignorable="d"
        Title="Add New File to Sync" Height="204" Width="400">
    <Grid Margin="0,0,-0.4,1">
        <Label x:Name="label" Content="Chose source path and target path" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <Label x:Name="label1" Content="Target:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="66"/>
        <Button x:Name="button_Browse1" Content="Browse..." Margin="316,45,0,0" VerticalAlignment="Top" Height="23" HorizontalAlignment="Left" Width="68" Click="button_Browse1_Click"/>
        <Button x:Name="button_Browse2" Content="Browse..." HorizontalAlignment="Left" Margin="316,76,0,0" VerticalAlignment="Top" Width="68" Height="23" Click="button_Browse2_Click"/>
        <TextBox x:Name="textBox_Source" HorizontalAlignment="Left" Height="23" Margin="81,45,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="230"/>
        <TextBox x:Name="textBox_Target" HorizontalAlignment="Left" Height="23" Margin="81,76,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="230"/>
        <Label x:Name="label_Copy" Content="Source:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="66"/>
        <Button x:Name="button_Add" Content="Add" HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top" Width="125" Click="button_Add_Click"/>
        <Button x:Name="button_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="259,144,0,0" VerticalAlignment="Top" Width="125" Click="button_Cancel_Click"/>
        <CheckBox x:Name="checkBox_CanOverwrite" Content="Overwrites" HorizontalAlignment="Left" Margin="15,113,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
